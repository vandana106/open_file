<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Share only the files in the Download directory -->
    <external-path name="downloads" path="Download/" />

    <!-- Share only the files in the app's cache directory -->
    <cache-path name="cache-path" path="cache/" />

    <!-- Share only the files in the app's external files directory -->
    <external-files-path name="external-files-path" path="files/" />

    <!-- Share only the files in a specific app directory -->
    <files-path name="files_path" path="app_files/" />
</paths>


